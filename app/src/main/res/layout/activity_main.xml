<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.simplifiedlauncher.home.MainActivity">

    <TextView
        android:id="@+id/orario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#fff"
        android:gravity="center"
        android:text="00:00"
        android:textSize="30dp"/>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/telefono"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffff"
            android:drawableTop="@mipmap/img_telephone"
            android:text="Telefono"/>

        <Button
            android:id="@+id/rubrica"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffff"
            android:drawableTop="@mipmap/img_contacts"
            android:text="Rubrica"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/sms"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffff"
            android:drawableTop="@mipmap/img_sms"
            android:text="Messaggi"/>

        <Button
            android:id="@+id/chiamate_rapide"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffff"
            android:drawableTop="@mipmap/img_rapid_call"
            android:text="Chiamate \nRapide"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffff"
            android:drawableTop="@mipmap/img_camera"
            android:text="Camera"/>

        <Button
            android:id="@+id/galleria"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffff"
            android:drawableTop="@mipmap/img_gallery"
            android:text="Galleria"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FFFF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#FFF00000"
            android:gravity="center"
            android:text="SOS"
            android:textColor="#FFFF"
            android:textSize="50dp"
            android:textStyle="bold"/>

    </LinearLayout>
</LinearLayout>
